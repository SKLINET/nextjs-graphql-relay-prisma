{
  "name": "nextjs-graphql-relay-prisma",
  "version": "1.0.0",
  "description": "Simple devstack built up with Next.js, GraphQL Yoga, Relay and Prisma.",
  "main": "index.js",
  "repository": "git@github.com:SKLINET/nextjs-graphql-relay-prisma.git",
  "author": "SKLINET <info@sklinet.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean-babel-cache": "rimraf 'node_modules/.cache/babel-loader'",
    "build": "next build ./src",
    "format": "prettier --trailing-comma es5 --print-width 120 --tab-width 4 --single-quote --write 'src/**/*.js'",
    "precommit": "lint-staged",
    "codegen": "yarn codegen:schema && yarn codegen:relay",
    "codegen:schema": "graphql get-schema -p api -o src/server/api/__generated__/schema.graphql --all false",
    "codegen:relay": "relay-compiler --src ./src --exclude '**/.next/**' '**/node_modules/**' '**/__tests__/**'  '**/__generated__/**' --exclude '**/server/**' --schema ./src/server/api/__generated__/schema.graphql --extensions jsx --extensions js --noFutureProofEnums true",
    "dev": "yarn clean-babel-cache && run-p dev:api dev:web dev:relay:watch dev:playground",
    "dev:api": "nodemon --config nodemon.api.json",
    "dev:web": "nodemon --config nodemon.web.json",
    "dev:relay:watch": "yarn codegen:relay --watch",
    "dev:playground": "graphql playground --port 5000 --server-only",
    "production:api": "NODE_ENV=production node -r esm src/server/api/index",
    "production:web": "NODE_ENV=production node -r esm src/server/web/index",
    "production": "yarn clean-babel-cache && npm-run-all build --parallel production:api production:web",
    "deploy:db": "prisma deploy",
    "docker:up": "cd database && docker-compose up -d && cd ../../",
    "docker:down": "cd database && docker-compose down && cd ../../",
    "analyze:bundles": "ANALYZE=BUNDLES yarn build",
    "analyze:size": "ANALYZE=SIZE yarn build && cat 'src/.next/stats.txt'",
    "analyze:visualize": "ANALYZE=VISUALIZE yarn build",
    "storybook": "start-storybook -s ./src -p 9001 -c storybook",
    "test": "jest",
    "test:watch": "jest --watch",
    "graphql": "graphql",
    "prisma": "prisma"
  },
  "resolutions": {
    "graphql": "14.1.1"
  },
  "engines": {
    "node": "10.x.x"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "verbose": true
  },
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@sentry/browser": "^4.6.4",
    "@sentry/node": "^4.6.4",
    "@sklinet/next-routes-with-locale": "^1.4.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-plugin-inline-dotenv": "^1.2.1",
    "babel-plugin-inline-react-svg": "^1.0.1",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-styled-components": "^1.10.0",
    "babel-plugin-transform-export-extensions": "^6.22.0",
    "body-parser": "^1.18.3",
    "dotenv": "^7.0.0",
    "esm": "^3.2.16",
    "express": "^4.16.4",
    "formik": "^1.5.1",
    "full-icu": "^1.2.1",
    "graphql": "^14.1.1",
    "graphql-import": "^0.7.1",
    "graphql-yoga": "^1.17.4",
    "helmet": "^3.16.0",
    "isomorphic-fetch": "^2.2.1",
    "locale": "^0.1.0",
    "moment": "^2.24.0",
    "next": "^8.0.3",
    "next-routes": "^1.4.2",
    "nprogress": "^0.2.0",
    "path": "^0.12.7",
    "prisma-binding": "^2.3.6",
    "prismic-javascript": "^2.0.1",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-color": "^2.17.0",
    "react-dom": "^16.6.3",
    "react-relay": "^1.7.0",
    "react-relay-network-modern": "^2.5.1",
    "react-relay-network-modern-ssr": "^1.2.2",
    "recompose": "^0.30.0",
    "redis": "^2.8.0",
    "relay-runtime": "^3.0.0",
    "request-ip": "^2.1.3",
    "styled-components": "^4.1.3",
    "webpack-bundle-analyzer": "^3.1.0",
    "webpack-bundle-size-analyzer": "^3.0.0",
    "webpack-visualizer-plugin": "^0.1.11",
    "yup": "^0.26.10"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "@std/esm": "^0.26.0",
    "@storybook/addon-actions": "^5.0.1",
    "@storybook/addon-backgrounds": "^5.0.1",
    "@storybook/addon-centered": "^5.0.1",
    "@storybook/addon-info": "^5.0.1",
    "@storybook/addon-knobs": "^5.0.1",
    "@storybook/addon-notes": "^5.0.1",
    "@storybook/addon-storysource": "^5.0.1",
    "@storybook/addons": "^5.0.1",
    "@storybook/react": "^5.0.1",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.5.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-relay": "^3.0.0",
    "concurrently": "^4.1.0",
    "eslint": "^5.15.1",
    "eslint-plugin-react": "^7.12.4",
    "graphql-cli": "^3.0.11",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "prisma": "^1.28.3",
    "relay-compiler": "^3.0.0",
    "rimraf": "^2.6.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --trailing-comma es5 --print-width 120 --tab-width 4 --single-quote --write",
      "git add"
    ]
  }
}
